{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "removeComments": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
