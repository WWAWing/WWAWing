{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": ".",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
        "es2017",
        "es2016",
        "es2015",
        "es5",
        "dom"
    ],
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}