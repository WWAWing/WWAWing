{
  "name": "@wwawing/engine",
  "version": "3.3.0",
  "description": "World Wide Adventure: an RPG Engine.",
  "main": "./lib/wwa.js",
  "sideEffects": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p build:dev deploy server",
    "version_up:patch": "npm version patch && npm run build",
    "version_up:minor": "npm version minor && npm run build",
    "version_up:major": "npm version major && npm run build",
    "build": "npm-run-all clean build:prod",
    "build:prod": "webpack --config webpack.config.prod.ts",
    "build:dev": "webpack -w",
    "deploy": "shx mkdir -p lib && npm-run-all deploy:*",
    "deploy:audio": "shx cp -R ./node_modules/@wwawing/assets/audio lib/",
    "deploy:html": "ts-node ./debug/make-debug-pages",
    "deploy:images": "shx cp ./node_modules/@wwawing/assets/images/*.* lib/",
    "deploy:mapdata": "shx cp ./node_modules/@wwawing/assets/mapdata/*.* lib/",
    "deploy:style": "shx cp ./node_modules/@wwawing/styles/output/*.* lib/ && shx cp ./node_modules/@wwawing/assets/style/*.* lib/",
    "clean": "shx rm -rf lib",
    "server": "node ./launch-server lib",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WWAWing/WWAWing.git"
  },
  "keywords": [
    "wwa",
    "typescript"
  ],
  "author": "WWA Wing Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WWAWing/WWAWing/issues"
  },
  "homepage": "https://github.com/WWAWing/WWAWing#readme",
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/pug": "^2.0.4",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.39.1",
    "@wwawing/assets": "^3.3.0",
    "@wwawing/common-interface": "^3.3.0",
    "@wwawing/debug-server": "^3.3.0",
    "@wwawing/event-emitter": "^3.3.0",
    "@wwawing/loader": "^3.3.0",
    "@wwawing/page-generator": "^3.3.0",
    "@wwawing/styles": "^3.3.0",
    "crypto-js": "^3.1.9-1",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "ts-loader": "^4.3.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.7.2",
    "uglify-js": "^3.3.27",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
